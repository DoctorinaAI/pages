{
    "hosting": {
        "public": "dist",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "redirects": [
            {
                "source": "/",
                "destination": "https://doctorina.com",
                "type": 301
            },
            {
                "source": "/index.html",
                "destination": "https://doctorina.com",
                "type": 301
            }
        ],
        "headers": [
            {
                "source": "**/*.@(js|css|png|jpg|jpeg|gif|svg|webp|woff|woff2|ttf|eot|ico)",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "public, max-age=31536000, immutable"
                    }
                ]
            },
            {
                "source": "**/*.@(html|json)",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "no-store"
                    }
                ]
            },
            {
                "source": "**/*.@(wasm|mjs|js)",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "no-cache, max-age=0, must-revalidate"
                    }
                ]
            }
        ],
        "cleanUrls": true,
        "trailingSlash": false
    }
}